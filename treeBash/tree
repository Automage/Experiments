#!/bin/bash

#
# Pranav Nair, 10/5/19
#

#
# Lists out all files and directories in a tree. MS-DOS like.
#

depth=0
stems=()

#
# Draws a branch of the tree representing a file/directory.
# @param 1 - depth
# @param 2 - filename
#

function print_branch {
	tab=""
	for ((i=0; i<$1; i++))	
	do
		if [ ${stems[$i]} -eq 1 ]
		then
			tab="${tab}|  "
		else
			tab="${tab}   "
		fi
	done
	
	printf "${tab}|--${2}\n"
}

#
# Recusively traverses all files in the current directory and calls draw_branch.
#

function recursive_list {
	local files=(*)
	local j=0
	for filename in "${files[@]}"
	do
		if [ $j -eq $((${#files[@]}-1)) ]
		then
			stems[$depth]=0
		else
			stems[$depth]=1
		fi
		
		((j++))
		print_branch $depth "$filename"

		if [ -d "$filename" ] 
		then
			((depth++))
			cd "$filename"
			recursive_list 
			cd ..
			((depth--))
		fi
	done
}

echo "${PWD##*/}" #prints current directory 
recursive_list
